{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-5">
  <h1 class="account-title">Espace membre</h1>
  <div class="row">
    <div class="col-md-3">
      {% include 'account/_menu.html.twig' %}
    </div>
    <div class="col-md-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Mes adresses</h5>
        <a href="{{ path('app_account_address_form') }}" class="btn btn-dark btn-sm">Ajouter une adresse</a>
      </div>
      {% if app.user.addresses|length > 0 %}
        <div class="row">
          {% for address in app.user.addresses %}
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card account-card h-100">
                <div class="card-body">
                  <h5>{{ address.firstname }} {{ address.lastname }}</h5>
                  <p class="mb-0">
                    {{ address.address }}<br>{{ address.postal }} {{ address.city }}<br>{{ address.country }}<br>{{ address.phone }}
                  </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                  <a href="{{ path('app_account_address_form', { id: address.id }) }}" class="btn btn-secondary btn-sm">Editer</a>
                  <a href="{{ path('app_account_address_delete', { id: address.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>Vous n'avez pas encore enregistrÃ© d'adresse.</p>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}