{% extends 'base.html.twig' %}

{% block body %}
<style>
    .rating {
        display: flex;
        flex-direction: row; /* Dans le sens normal, 1 à gauche, 5 à droite */
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }
#review_rating {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
}
    .rating input[type="radio"] {
        display: none;
    }

    .rating label {
        font-size: 2rem;
        color: #adadad;
        cursor: pointer;
        padding: 0 5px;
        user-select: none;
        transition: color 0.2s;
    }

    .rating label::before {
        content: "★";
        font-size: 64px;
    }
 #review_content {
    height:124px;
    font-size: 24px;
    text-align: center;
 }
 .required {
    font-size: 48px;}

    /* On ne gère plus le survol et la sélection en CSS, juste l'état "gold" */
    .rating label.gold {
        color: gold !important;
    }
</style>
<br>
<div class="container my-5 responsive-margin">
    <div class="row justify-content-center mt-3">
        <div class="col-md-6 position-relative d-block justify-content-center align-items-center">
<img src="{{ asset('uploads/products/' ~ product.illustration) }}" class="img-fluid zoom" style="width: 480px; height: 290px; border: 1px solid #808080; border-radius: 10px;" alt="{{ product.name }}">
        </div>
        <div class="col-md-6">
            <small>
                <i>
                    <a href="{{ path('app_category', {slug : product.category.slug }) }}" class="mb-3">{{ product.category.name }}</a>
                    {% if product.sousCategory %}
                        > <a href="{{ path('app_souscategory', {slug : product.sousCategory.slug }) }}">{{ product.sousCategory.name }}</a> >
                    {% endif %}
                    {{ product.name }}
                </i>
            </small>
            <h1>{{ product.name }}</h1>
            <span class="d-block mb-3">
                <span class="badge bg-gris">Prix TTC : {{ product.pricewt | price }}</span>
            </span>
            {{ product.description | raw }}

            <div class="d-flex align-items-center justify-content-between mt-3 flex-wrap">
                <div class="d-flex align-items-center w-100 mb-5">
                    <a href="{{ path('app_cart_add', {id : product.id }) }}" class="btn btn-primary btn-dark flex-grow-1 me-2">Ajouter au panier</a>

                    {% if app.user %}
                        {% if product in app.user.wishlists %}
                            <a class="btn btn-dark p-1 wishlist-added" href="{{ path('app_account_wishlist_remove', {id: product.id }) }}">
                                <i data-feather="heart" class="text-danger"></i> <span class="wishlist-count">1</span>
                            </a>
                        {% else %}
                            <a class="btn btn-dark p-1" href="{{ path('app_account_wishlist_add', {id: product.id }) }}">
                               
                            </a>
                        {% endif %}
                    {% else %}
                        <a href="#collapseExample" class="btn btn-dark p-1" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseExample">
                            
                        </a>
                    {% endif %}
                    <div class="row justify-content-center ">
                        <div class="col-md-12 p-4 ">
                            <div class="collapse" id="collapseExample">
                                <div class="card card-body ">
                                    Pour utiliser les avantages de la wishlist:
                                    <a href="{{ path('app_login') }}">Connectez-vous</a>
                                    <a href="{{ path('app_register') }}"> ou créez votre compte client.</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

               
    {{ form_start(reviewForm) }}
        {{ form_row(reviewForm.content) }}
        <div class="rating" id="star-rating">
            {{ form_widget(reviewForm.rating) }}
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-dark flex-grow-1 me-2" style="width: 264px;
    margin-left: 154px;">Envoyer</button>
    {{ form_end(reviewForm) }}
</div>

            <h3>Avis des clients</h3>
            {% if product.reviews|length > 0 %}
                <ul class="list-group mb-3">
                    {% for review in product.reviews %}
                        <li class="list-group-item">
                            <strong>Note :</strong>
                            {% for i in 1..5 %}
                                {% if i <= review.rating %}
                                    <span style="color: gold;">★</span>
                                {% else %}
                                    <span style="color: #ddd;">★</span>
                                {% endif %}
                            {% endfor %}
                            <br>
                            <strong>Avis :</strong> {{ review.content }}<br>
                            {% if review.user %}
                                <em>Par {{ review.user.firstname }} {{ review.user.lastname }}</em>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucun avis pour ce produit.</p>
            {% endif %}
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ratingContainer = document.getElementById('star-rating');
        const inputs = ratingContainer.querySelectorAll('input[type="radio"]');
        const labels = ratingContainer.querySelectorAll('label');

        function highlightStars(num) {
            labels.forEach((label, index) => {
                if (index < num) {
                    label.classList.add('gold');
                } else {
                    label.classList.remove('gold');
                }
            });
        }

        labels.forEach((label, index) => {
            label.addEventListener('mouseenter', () => {
                // Survol : on met en gold toutes les étoiles jusqu'à celle-ci
                highlightStars(index + 1);
            });

            label.addEventListener('mouseleave', () => {
                // Quand on quitte le survol, on vérifie si une étoile est sélectionnée
                const checkedInput = ratingContainer.querySelector('input[type="radio"]:checked');
                if (checkedInput) {
                    highlightStars(checkedInput.value);
                } else {
                    highlightStars(0);
                }
            });

            label.addEventListener('click', () => {
                // Au clic, on fixe la valeur
                inputs[index].checked = true;
                highlightStars(index + 1);
            });
        });

        // Initialiser l'affichage si une valeur est déjà sélectionnée
        const checkedInput = ratingContainer.querySelector('input[type="radio"]:checked');
        if (checkedInput) {
            highlightStars(checkedInput.value);
        }
    });
</script>
{% endblock %}
