<!-- Première Navbar (Noire) -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top navbar-top">
    <div class="container-fluid">
        <button class="navbar-toggler navbar-top-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTopCollapse" 
                aria-controls="navbarTopCollapse" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse navbar-top-collapse" id="navbarTopCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0 navbar-top-nav">
                <li class="nav-item nav-top-item">
                    <a class="nav-link nav-top-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}"
                       href="{{ path('app_home') }}">
                        Accueil
                    </a>
                </li>
                <li class="nav-item nav-top-item">
                    <a class="nav-link nav-top-link {{ app.request.get('_route') == 'app_about_us' ? 'active' : '' }}"
                       href="#">
                       À propos de nous
                    </a>
                </li>
                <li class="nav-item nav-top-item">
                    <a class="nav-link nav-top-link {{ app.request.get('_route') == 'contact' ? 'active' : '' }}"
                       href="{{ path('app_contact') }}">
                       Contact
                    </a>
                </li>
                {% if not app.user %}
                    <!-- Bouton Connexion visible uniquement si l’utilisateur n’est pas connecté -->
                    <li class="nav-item nav-top-item">
                        <a class="nav-link nav-top-link" href="{{ path('app_login') }}">
                            Connexion
                        </a>
                    </li>
                {% endif %}
            </ul>

            <!-- Menu de droite (icônes user, wishlist, panier) -->
            <div class="speed-menu navbar-bottom-speed-menu">
                {% if app.user %}
                    <a href="{{ path('app_account') }}" class="nav-link navtop-link">
                        <i data-feather="user"></i>
                        {{ app.user.firstname }}
                    </a>
                    <a href="{{ path('app_account_wishlist') }}" class="heart-icons navbar-bottom-heart">
                        <i data-feather="heart"></i>
                        {% if app.user.wishlists|length > 0 %}
                            <span class="wishlist-count">{{ app.user.wishlists|length }}</span>
                        {% endif %}
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="navbar-bottom-login-link">
                        <i data-feather="user"></i>
                    </a>
                {% endif %}
                <a href="{{ path('app_cart') }}" class="nav-link navtop-link">
                    <i data-feather="shopping-cart"></i>
                    <span class="badge text-bg-light">{{ fullCartQuantity }}</span>
                </a>
            </div>
        </div>
    </div>
</nav>

<!-- Deuxième Navbar (Catégories) -->
<nav class="navbar navbar-expand-md navbar-dark fixed-top navbar-bottom" style="top: 56px;">
    <div class="container-fluid">
        <a class="navbar-brand navbar-bottom-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('SmArtis.gif') }}" alt="Logo SMARTIS" class="logo-animation" >
        </a>
        <button class="navbar-toggler navbar-bottom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarBottomCollapse" 
                aria-controls="navbarBottomCollapse" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse navbar-bottom-collapse" id="navbarBottomCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0 navbar-bottom-nav">
                {% for category in categories %}
                    <li class="nav-item dropdown nav-bottom-item">
                        <a class="nav-link dropdown-toggle nav-bottom-link {{ app.request.get('_route') == 'app_category' and 
                            app.request.get('_route_params')['slug'] == category.slug ? 'active' : '' }}"
                           href="#" 
                           id="navbarDropdown{{ category.id }}" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false">
                            {{ category.name }}
                        </a>
                        <ul class="dropdown-menu dropdown-bottom-menu" aria-labelledby="navbarDropdown{{ category.id }}">
                            {# Produits sans sous-catégorie #}
                            {% for product in category.products %}
                                {% if product.sousCategory is null %}
                                    <li class="nav-bottom-item">
                                        <a class="dropdown-item dropdown-bottom-item" href="{{ path('app_product', {
                                            category_slug: product.category.slug,
                                            souscategory_slug: 'aucune', 
                                            slug: product.slug
                                        }) }}">
                                            {{ product.name }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                            {# Sous-catégories #}
                            {% for sousCategory in category.sousCategories %}
                                <li class="dropdown-bottom-submenu dropdown nav-bottom-item">
                                    <a class="dropdown-item dropdown-bottom-item dropdown-toggle nav-bottom-link" href="#" aria-expanded="false">
                                        {{ sousCategory.name }}
                                    </a>
                                    {% if sousCategory.products|length > 0 %}
                                        <ul class="dropdown-menu dropdown-bottom-menu">
                                            {% for product in sousCategory.products %}
                                                {% if product.category and product.sousCategory %}
                                                    <li class="nav-bottom-item">
                                                        <a class="dropdown-item dropdown-bottom-item" href="{{ path('app_product', {
                                                            category_slug: product.category.slug,
                                                            souscategory_slug: product.sousCategory.slug,
                                                            slug: product.slug
                                                        }) }}">
                                                            {{ product.name }}
                                                        </a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                            <li><hr class="dropdown-divider"></li>
                            <li class="nav-bottom-item">
                                <a class="dropdown-item dropdown-bottom-item text-center" href="{{ path('app_category', {slug: category.slug}) }}">
                                    Voir tous les produits
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var dropdownSubmenus = document.querySelectorAll('.dropdown-bottom-submenu .dropdown-toggle');

    dropdownSubmenus.forEach(function (toggle) {
        toggle.addEventListener('click', function (e) {
            e.preventDefault();
            e.stopPropagation();

            document.querySelectorAll('.dropdown-bottom-submenu .dropdown-menu.show').forEach(function (openMenu) {
                if (openMenu !== toggle.nextElementSibling) {
                    openMenu.classList.remove('show');
                }
            });

            var submenu = toggle.nextElementSibling;
            submenu.classList.toggle('show');
        });
    });

    document.addEventListener('click', function (e) {
        if (!e.target.closest('.dropdown-bottom-submenu')) {
            document.querySelectorAll('.dropdown-bottom-submenu .dropdown-menu.show').forEach(function (menu) {
                menu.classList.remove('show');
            });
        }
    });
});
</script>
