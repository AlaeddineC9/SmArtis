{# templates/partials/_navbar.html.twig #}
<nav class="navbar navbar-expand-md navbar-dark fixed-top ml-auto">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('SmArtis.gif') }}" alt="Logo SMARTIS" class="logo-animation">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" 
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}" 
                       href="{{ path('app_home') }}">Accueil</a>
                </li>
                {% for category in categories %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle {{ app.request.get('_route') == 'app_category' and 
                            app.request.get('_route_params')['slug'] == category.slug ? 'active' : '' }}"
                           href="#" 
                           id="navbarDropdown{{ category.id }}" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false">
                            {{ category.name }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown{{ category.id }}">
                            {# Produits sans sous-catégorie #}
                            {% for product in category.products %}
                                {% if product.sousCategory is null %}
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_product', {
                                            category_slug: product.category.slug,
                                            souscategory_slug: 'aucune', 
                                            slug: product.slug
                                        }) }}">
                                            {{ product.name }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}

                            {# Sous-catégories #}
                            {% for sousCategory in category.sousCategories %}
                                <li class="dropdown-submenu dropdown">
                                    <a class="dropdown-item dropdown-toggle" href="#" aria-expanded="false">
                                        {{ sousCategory.name }}
                                    </a>
                                    {% if sousCategory.products|length > 0 %}
                                        <ul class="dropdown-menu">
                                            {% for product in sousCategory.products %}
                                                {% if product.category and product.sousCategory %}
                                                    <li>
                                                        <a class="dropdown-item" href="{{ path('app_product', {
                                                            category_slug: product.category.slug,
                                                            souscategory_slug: product.sousCategory.slug,
                                                            slug: product.slug
                                                        }) }}">
                                                            {{ product.name }}
                                                        </a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-center" href="{{ path('app_category', {slug: category.slug}) }}">
                                    Voir tous les produits
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endfor %}
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'contact' ? 'active' : '' }}" 
                       href="{{ path('contact') }}">Contact</a>
                </li>
            </ul>
            <div class="speed-menu">
                {% if app.user %}
                    <a href="{{ path('app_account') }}">
                        <i data-feather="user"></i>
                        {{ app.user.firstname }}
                    </a>
                    <a href="{{ path('app_account_wishlist') }}" class="heart-icons">
                        <i data-feather="heart"></i>
                        {% if app.user.wishlists|length > 0 %}
                            <span class="wishlist-count">{{ app.user.wishlists|length }}</span>
                        {% endif %}
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}">
                        <i data-feather="user"></i>
                    </a>
                {% endif %}
                <a href="{{ path('app_cart') }}">
                    <i data-feather="shopping-cart"></i>
                    <span class="badge text-bg-light">{{ fullCartQuantity }}</span>
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var dropdownSubmenus = document.querySelectorAll('.dropdown-submenu .dropdown-toggle');

    dropdownSubmenus.forEach(function (toggle) {
        toggle.addEventListener('click', function (e) {
            e.preventDefault();
            e.stopPropagation();

            document.querySelectorAll('.dropdown-submenu .dropdown-menu.show').forEach(function (openMenu) {
                if (openMenu !== toggle.nextElementSibling) {
                    openMenu.classList.remove('show');
                }
            });

            var submenu = toggle.nextElementSibling;
            submenu.classList.toggle('show');
        });
    });

    document.addEventListener('click', function (e) {
        if (!e.target.closest('.dropdown-submenu')) {
            document.querySelectorAll('.dropdown-submenu .dropdown-menu.show').forEach(function (menu) {
                menu.classList.remove('show');
            });
        }
    });
});
</script>
